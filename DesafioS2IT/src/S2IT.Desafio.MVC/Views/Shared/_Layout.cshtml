<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Desafio .NET S2IT</title>
    
    <meta name="description" content="The description of my page" />
    <link rel="stylesheet" href="~/Content/bulma.min.css" />
    <link rel="stylesheet" href="~/Content/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/site.css" />

    <script type="text/javascript" src="~/Scripts/jquery-3.2.1.min.js"></script>
    <script type="text/javascript" src="~/Scripts/jquery.validate.min.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.min.js"></script>
    <script type="text/javascript" src="~/Scripts/sweetalert.min.js"></script>
</head>
<body>
    <header>
        
        <nav class="navbar is-primary">
            <div class="navbar-brand">
                <a class="navbar-item" href="@Url.Action("Index", "Home")">
                    <img src="http://s2it.com.br/site/wp-content/themes/s2it/images/logoS2it.png" width="97" height="32">
                </a>
                <div class="navbar-burger burger" data-target="navMenuColorprimary-example">
                    <span></span>
                    <span></span>
                    <span></span>
                </div>
            </div>

            <div id="navMenuColorprimary-example" class="navbar-menu">
                <div class="navbar-start">
                    <a class="navbar-item" href="@Url.Action("Index", "Home")">
                        Inicio
                    </a>
                    <a class="navbar-item" href="@Url.Action("Index", "Jogo")">
                        Meus Jogos
                    </a>
                    <a class="navbar-item" href="@Url.Action("Index", "Amigo")">
                        Meus Amigos
                    </a>
                    <a class="navbar-item" href="@Url.Action("Index", "Emprestimo")">
                        Meus Emprestimos
                    </a>
                </div>

                <div class="navbar-end">
                    <div class="navbar-item">
                        <div class="field is-grouped">
                            <p class="control">
                                <a class="bd-tw-button button" href="@Url.Action("Emprestar", "Emprestimo")">
                                    <span class="icon">
                                        <i class="fa fa-handshake-o"></i>
                                    </span>
                                    <span>
                                        Emprestar Jogo
                                    </span>
                                </a>
                            </p>
                            <p class="control">
                                <a class="button is-primary" href="@Url.Action("Sair", "Login")">
                                    <span class="icon">
                                        <i class="fa fa-sign-out"></i>
                                    </span>
                                    <span>Sair</span>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <section class="section">
        <div class="container">
           @RenderBody()
        </div>
    </section>
    <footer>
        <div class="container">&copy; @DateTime.Now.Year Desafio .NET S2IT!</div>
    </footer>

</body>
</html>